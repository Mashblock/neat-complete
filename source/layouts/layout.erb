<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Neat Complete" %></title>

    <%= stylesheet_link_tag "all" %>
  </head>

  <body class="<%= page_classes %>">
    <nav class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <strong><a class="navbar-brand" href="/">Neat Complete</a></strong>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to icon("github"), 'https://github.com/AbleTech/neat-complete',
              title: 'Fork on GitHub', data:{toggle: 'tooltip', placement: 'bottom'} %>
          </li>
          <li>
            <%= link_to icon("codepen"), 'http://codepen.io/collection/DcHCj/',
              title: 'CodePen Demos', data:{toggle: 'tooltip', placement: 'bottom'} %>
          </li>
          <li>
            <%= link_to icon("file-code-o"), 'http://coffeedoc.info/github/AbleTech/neat-complete/master/',
              title: 'Documentation', data:{toggle: 'tooltip', placement: 'bottom'} %>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>

    <footer>
      <p class='text-center'>&copy; <%= Time.now.year %> <%= link_to "Abletech", "http://abletech.co.nz" %></p>
    </footer>
  </body>
</html>
